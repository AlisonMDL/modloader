#!/bin/sh
./cmake.sh

if [[ $? == 0 ]]
then

    make all

    if [[ $? == 0 ]]
    then
        echo "Copying modloader.dll into San Andreas directory as an ASI..."
        cp "bin/modloader.dll" "bin/gta_sa/modloader.asi"

        echo "Copying plugins and documentations into San Andreas /modloader/.plugins"
        cd bin
        for f in *.dll
        do
                if [ "$f" != "modloader.dll" ]
                then
                        echo "Copying $f..."
                        cp "$f" "gta_sa/modloader/.plugins/$f"
                fi
        done
        cd ..
        
        cd doc/plugins
        for f in *
        do
			echo "Copying $f..."
     		cp "$f" "../../bin/gta_sa/modloader/.plugins/$f"
        done
        cd ..

        exit 0
    fi
fi

exit 1
